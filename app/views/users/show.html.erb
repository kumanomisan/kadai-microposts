<div class="row">

  <!-- aside=補足みたいなイメージで使う -->
  <aside class="col-sm-4">
    
    <!-- カード -->
    <div class="card">
      
      <!-- カードヘッダ -->
      <div class="card-header">
        <h3 class="card-title"><%= @user.name %></h3>
      </div>
      <!-- カードボディ -->
      <div class="card-body">
        <!--Helperにあるメソッドを利用しているが、Viewにある場合はMix-in(include)不要 -->
        <img class="rounded img-fluid" src="<%= gravatar_url(@user, { size: 500 }) %>" alt="">
      </div>
      
    </div>
    
  </aside>
  
  <div class="col-sm-8">
    <ul class="nav nav-tabs nav-justified mb-3">
      <!--この部分は 実行結果（文字列なら文字列を返す） if 条件という構文になる -->
      <!--<%= #"active" if current_page?(user_path(@user)) %> -->
      <li class="nav-item"><a href="<%= user_path(@user) %>" class="nav-link <%= "active" if current_page?(user_path(@user)) %>">Microposts <span class="badge badge-secondary"><%= @count_microposts %></span></a></li>
      <li class="nav-item"><a href="#" class="nav-link">Following</a></li>
      <li class="nav-item"><a href="#" class="nav-link">Follower</a></li>
    </ul>
    <%= render "microposts/microposts", microposts: @microposts %>
  </div>
  
</div>